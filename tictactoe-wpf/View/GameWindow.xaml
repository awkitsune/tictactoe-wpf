<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tictactoe_wpf.View"
        xmlns:Model="clr-namespace:tictactoe_wpf.Model" x:Class="tictactoe_wpf.View.GameWindow"
        mc:Ignorable="d"
        Title="tictactoe!" Height="450" Width="270" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" WindowStyle="None" 
        Background="Transparent" 
        Icon="/tictactoe-wpf;component/Assets/appIcon.png"
        Closing="Window_Closing"
    Loaded="Window_Loaded">
    <Window.DataContext>
        <Model:GameWindowViewModel/>
    </Window.DataContext>
    <Grid Background="#00000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="64"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="rowHeader" Height="32"/>
            <RowDefinition Name="rowUserdata" Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="8"
                Grid.RowSpan="5"
                Grid.ColumnSpan="2">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/tictactoe-wpf;component/Assets/window_bg_autumn.jpg"/>
            </Border.Background>

        </Border>

        <!--WindowHeader panel-->
        <Border Grid.ColumnSpan="2"
                Name="borderHeader"
                Background="#b000"
                CornerRadius="8 8 0 0"
                MouseDown="borderHeader_MouseDown"/>

        <!--WindowInfo panel-->
        <Border Background="#fff"
                Width="32"
                HorizontalAlignment="Left"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.25"/>
            </Border.Effect>
        </Border>
        <StackPanel Orientation="Horizontal">
            <Image Width="18" Height="18" 
                   Margin="6"
                   RenderOptions.BitmapScalingMode="HighQuality" 
                   Source="/tictactoe-wpf;component/Assets/appIcon.png"/>
            <TextBlock Text="tictactoe!"
                       VerticalAlignment="Center"
                       Margin="8"
                       Foreground="#fff"/>
        </StackPanel>

        <!-- WindowsControls panel -->
        <Border Background="#fff"
                Grid.Column="1"
                Width="60"
                HorizontalAlignment="Right"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.25"/>
            </Border.Effect>
        </Border>
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Margin="4 0">
            <Button x:Name="buttonMinimize" Width="24" Height="24"
                    Background="#0000"
                    BorderThickness="0"
                    Padding="0"
                    Margin="0 0 4 0" Command="{Binding MinimizeWindow, Mode=OneWay}">
                <Image Source="/tictactoe-wpf;component/Assets/outline_minimize_black_24dp.png"/>
            </Button>
            <Button x:Name="buttonClose" Width="24" Height="24"
                    Background="#0000"
                    BorderThickness="0"
                    Padding="0" Command="{Binding CloseWindow, Mode=OneWay}">
                <Image Source="/tictactoe-wpf;component/Assets/outline_close_black_24dp.png"/>
            </Button>
        </StackPanel>
        
        <!-- Userdata panel -->
        <Border Background="#b000"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                CornerRadius="0 0 8 8">
            <Border.Effect>
                <DropShadowEffect Direction="270" Opacity="0.25" BlurRadius="8"/>
            </Border.Effect>
        </Border>
        <StackPanel x:Name="stackpanelUserdata"
                    Orientation="Vertical"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="8 6">
            <TextBlock Text="{Binding Username}"
                       FontSize="24"
                       Foreground="#fff"/>
            <TextBlock Text="{Binding Games}"
                       Margin="0 2"
                       Foreground="#fff"/>
            <StackPanel Orientation="Horizontal"
                        Margin="0 2">
                <TextBlock Text="{Binding Wins}" 
                           Margin="0 0 4 0"
                           Foreground="#fff"/>
                <TextBlock Text="{Binding Loses}"
                           Foreground="#fff"/>
            </StackPanel>
        </StackPanel>

        <!-- Game panel-->
        <Grid Name="gridGame" 
              Grid.Row="2"
              Grid.ColumnSpan="2"
              Margin="8"
              Width="254"
              Height="254" IsEnabled="{Binding GridGameEnabled}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="b00"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i00" />
            </Button>
            <Button x:Name="b10"
                    Grid.Column="1"
                    Grid.Row="0"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i10" />
            </Button>
            <Button x:Name="b20"
                    Grid.Column="2"
                    Grid.Row="0"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i20" />
            </Button>

            <Button x:Name="b01"
                    Grid.Column="0"
                    Grid.Row="1"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i01" />
            </Button>
            <Button x:Name="b11"
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i11" />
            </Button>
            <Button x:Name="b21"
                    Grid.Column="2"
                    Grid.Row="1"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i21" />
            </Button>

            <Button x:Name="b02"
                    Grid.Column="0"
                    Grid.Row="2"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i02" />
            </Button>
            <Button x:Name="b12"
                    Grid.Column="1"
                    Grid.Row="2"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i12" />
            </Button>
            <Button x:Name="b22"
                    Grid.Column="2"
                    Grid.Row="2"
                    Margin="4"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding FieldClick, Mode=OneWay}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Name}">
                <Image x:Name="i22" />
            </Button>
        </Grid>

        <!--BottomMenu panel-->
        <StackPanel Orientation="Vertical"
                    Grid.Row="3"
                    Margin="8 0"
                    VerticalAlignment="Center">
            <Button Content="About"
                    Margin="0 0 0 4"
                    Height="24"
                    Background="#b000"
                    Foreground="#fff"
                    Style="{DynamicResource DarkTransparentButton}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect Direction="270" Opacity="0.25"/>
                </Button.Effect>
            </Button>
            <Button Content="Logout"
                    Height="24"
                    Background="#b000"
                    Foreground="#fff"
                    Style="{DynamicResource DarkTransparentButton}"
                    Command="{Binding LogoutClick, Mode=OneWay}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <Button.Effect>
                    <DropShadowEffect Direction="270" Opacity="0.25"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        <Button Background="#b000"
                Foreground="#fff"
                Grid.Row="3"
                Grid.Column="1"
                Margin="6"
                VerticalContentAlignment="Center"
                Command="{Binding RestartClick, Mode=OneWay}"
                Style="{DynamicResource DarkTransparentButton}">
            <Image Width="24" Height="24"
                   RenderOptions.BitmapScalingMode="HighQuality" 
                   Source="/tictactoe-wpf;component/Assets/outline_restart_alt_white_24dp.png"/>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="28"/>
                </Style>
            </Button.Resources>
            <Button.Effect>
                <DropShadowEffect Direction="270" Opacity="0.25"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
